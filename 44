from random import randint
oshibk = 0
prav = 0
while oshibk < 3:
    a1 = randint(1, 10)
    b1 = randint(1, 10)
    summ = int(input(f"Сумма {a1} + {b1}: "))
if summ == a1 + b1:
    print("Правильно!")
    prav += 1
else:
    oshibk += 1
    print("Ответ неверный")
print("Игра окончена. Правильных ответов: ", prav)
